{
  "name": "universal-react-example",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hilzu/universal-react-starter.git"
  },
  "browserify": {
    "transform": [
      [
        "babelify", {
          "sourceMapRelative": "."
        }
      ]
    ]
  },
  "scripts": {
    "build": "NODE_ENV=production browserify src/client/client.js > public/bundle.js",
    "start": "nodemon -w src/ --ignore src/client -x 'node -r babel-core/register src/server/server.js'",
    "test": "eslint .",
    "watch": "watchify src/client/client.js -o public/bundle.js -dv"
  },
  "dependencies": {
    "babel-core": "^6.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.1.4",
    "babel-preset-es2015": "^6.1.4",
    "babel-preset-react": "^6.1.4",
    "express": "^4.13.3",
    "he": "^0.5.0",
    "history": "^1.11.1",
    "isomorphic-fetch": "^2.2.0",
    "lodash": "^3.10.1",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-router": "^1.0.0"
  },
  "license": "Public Domain",
  "devDependencies": {
    "babel-eslint": "^4.1.6",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "eslint": "^1.10.3",
    "eslint-config-import": "^0.9.1",
    "eslint-config-standard": "^4.4.0",
    "eslint-config-standard-react": "^1.2.1",
    "eslint-plugin-import": "^0.11.0",
    "eslint-plugin-react": "^3.11.3",
    "eslint-plugin-standard": "^1.3.1",
    "nodemon": "^1.4.1",
    "watchify": "^3.2.3"
  }
}
