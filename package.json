{
  "name": "universal-react-starter",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hilzu/universal-react-starter.git"
  },
  "babel": {
    "optional": [
      "es7.classProperties"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build": "NODE_ENV=production browserify src/client/client.js > public/bundle.js",
    "start": "nodemon --exec babel-node src/server/server.js",
    "watch": "watchify src/client/client.js -o public/bundle.js -dv"
  },
  "dependencies": {
    "babel": "^5.8.23",
    "consolidate": "^0.13.1",
    "express": "^4.13.3",
    "mustache": "^2.1.3",
    "react": "^0.14.0-rc1",
    "react-dom": "^0.14.0-rc1"
  },
  "license": "Public Domain",
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.0.1",
    "nodemon": "^1.4.1",
    "watchify": "^3.2.3"
  }
}
